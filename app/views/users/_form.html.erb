<%= render 'shared/errors', obj: @user %>
<div class="container">
    <div class="form">
      <%= form_for @user do |f| %>
        <div class="form-group">
          <div class="control-label">
            <%= f.label :email %>
          </div>
          <div>
            <%= f.email_field :email, class: "form-control", placeholder: "Valid email required", autofocus: true %>
          </div>
        </div>
        <div class="form-group">
          <div class="control-label">
            <%= f.label :password %>
          </div>
          <div>
            <%= f.password_field :password, class: "form-control", placeholder: "Must be at least 4 characters" %>
          </div>
        </div>
        <div class="form-group row">
          <div id="article-btn">
            <%= f.submit(@user.new_record? ? "Signup" : "Update Account", class: 'btn btn-primary btn-lg') %>
          </div>
            <%= link_to "Cancel", root_path, class: "btn btn-secondary btn-lg" %>
        </div>
      <% end %>
    </div>
</div>