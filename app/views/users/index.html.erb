<div class="container">
  <h1 class="center-text" >All Users</h1>
  <hr>
  <table id="index">
    <tr>
      <th>Username</th>
      <th>Email</th>
      <th>Admin</th>
    </tr>
    <%= will_paginate %>
    <% @users.each do |user|%>
    <tr>
      <td><%= link_to user.email, user_path(user)%></td>
      <td><%= user.admin %></td>
      <% if user_signed_in? && (current_user == user || current_user.admin?) %>
        <td><%= link_to 'Edit', edit_user_path(user), class: "btn btn-primary" %></td>
        <td><%= link_to 'Delete', user_path(user), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-danger"  %></td>
      <% end %>
    </tr>
    <% end %>
  </table>
</div>